<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-clients" author="uPagge">
        <createTable tableName="clients">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>

            </column>
            <column name="email" type="varchar(64)"/>
            <column name="password" type="varchar(250)"/>
            <column name="lastname" type="varchar(64)"/>

        </createTable>
    </changeSet>
    <changeSet id="add-column-occupied" author="uPagge">
        <addColumn tableName="boxes">
            <column name="is_occupied" type="boolean">
                <constraints nullable="false" defaultValue="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>